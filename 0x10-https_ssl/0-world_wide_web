#!/bin/bash

# Function to display information about a subdomain
display_info() {
    local domain="$1"
    local subdomain="$2"
    
    # If subdomain is not provided, set default subdomains
    if [ -z "$subdomain" ]; then
        subdomains=("www" "lb-01" "web-01" "web-02")
    else
        subdomains=("$subdomain")
    fi
    
    # Iterate through subdomains and retrieve DNS information
    for sub in "${subdomains[@]}"; do
        result=$(dig +short "$sub.$domain")
        if [ -n "$result" ]; then
            record_type=$(dig +short "$sub.$domain" | awk 'NR==1 {print $2}')
            echo "The subdomain $sub is a $record_type record and points to $result"
        fi
    done
}

# Main script execution starts here
if [ $# -lt 1 ]; then
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi

domain="$1"
subdomain="$2"

display_info "$domain" "$subdomain"

